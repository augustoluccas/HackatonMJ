<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button_style">
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_button" parent="button_style">
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:background">@drawable/main_button_selector</item>
    </style>
    
    <style name="inner_button" parent="button_style">
        <item name="android:background">@drawable/main_button_selector</item>
    </style>

    <style name="confirm_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="confirm_text_title_style" parent="confirm_text_style">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
